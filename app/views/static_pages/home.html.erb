<div class ="row">
  <!--Collect Ingredients -->
  <div class = "span4 offset4">
    <%= form_tag(add_ingredient_path, method: "get") do %>
        <%= label_tag(:q, "addIngredient") %>
        <%= text_field_tag(:q) %>
        <%= text_field_tag(placeholder: "Add an ingredient!") %>
        <%= submit_tag("Add") %>
    <% end %>
    <!--Display Ingredients-->
    <ul>
      <% if !session[:ingredients].nil? %>
          <% session[:ingredients].each do |i| %>
              <li><%= i %></li>
          <% end %>
      <%end%>
    </ul>
  </div>
    <!-- Print out the results-->
    <div class="row">
      <div class = "span4 offset4">
         <!-- Currently, I'm just rendering hardcoded results. But I could return a googleajax call -->
         <%= render '/static_pages/display_results'%>
      </div>
      <!--Display a Login box-->
      <% if !user_signed_in? %>
       <%= render '/static_pages/login_box'%>
      <% else%>
        <!-- Display the user's Favorite recipes-->
        <div class ="span4" id="favorites">
         <%= current_user.favorites.show %>
      <% end %>
        </div>
    </div>
</div>
<% link_to image_tag('rails.png', alt: 'Rails'), 'http://rubyonrails.org' %>
